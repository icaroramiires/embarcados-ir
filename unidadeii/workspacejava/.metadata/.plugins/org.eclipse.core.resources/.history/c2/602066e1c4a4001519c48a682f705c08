package br.edu.ifba.bsi.se.smartpark.bd;

import java.util.ArrayList;
import java.util.List;
import java.util.Map;
import java.util.TreeMap;

public class UsuarioDAO {

	private static Map<Integer, Usuario> usuarios = 
			new TreeMap<Integer, Usuario>();
	
	static{
		
		Usuario u1 = new Usuario();
		u1.setId(246);
		u1.setNome("Igo");
		u1.setCarro("Maverik");
		u1.setPlaca("LTZ");
		u1.setIdade("60");
		u1.setPne("sim");
		u1.setFoto("/smartpark/web/resources/usuario.jpg");
		
		Usuario u2 = new Usuario();
		u2.setId(49);
		u2.setNome("Icaro");
		u2.setCarro("Honda");
		u2.setPlaca("123");
		u2.setIdade("18");
		u2.setPne("nao");
		
		
		
		usuarios.put(u1.getId(), u1);
		usuarios.put(u2.getId(), u2);
		
	
		
	}
	
	public static Usuario getUsuario(int id){
		return usuarios.get(id);
	}
	
	public static List<Usuario> getUsuarios(){
		List<Usuario> lusuario = new ArrayList<Usuario>();
		lusuario = (List<Usuario>) usuarios;
		return lusuario;
	}
	

}
