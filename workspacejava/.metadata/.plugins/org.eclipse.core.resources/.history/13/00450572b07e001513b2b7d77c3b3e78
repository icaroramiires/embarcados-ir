log4j.rootLogger = WARN, A1, Console

log4j.appender.A1 = org.apache.log4j.DailyRollingFileAppender

log4j.appender.A1.file = monitor.log

log4j.appender.A1.layout = org.apache.log4j.PatternLayout

log4j.appender.A1.DatePattern = '_'dd-MM-yyyy'.log'

log4j.appender.A1.layout.ConversionPattern=%p - %d{dd/MM/yyyy - HH:mm:ss} - JavaMonitor - %m %n

log4j.appender.A1.MaxFileSize= 5MB

log4j.appender.A1.MaxBackupIndex = 100000

log4j.appender.Console = org.apache.log4j.ConsoleAppender

log4j.appender.Console.layout = org.apache.log4j.PatternLayout

log4j.appender.Console.layout.ConversionPattern=%p - %d{dd/MM/yyyy - HH:mm:ss} - JavaMonitor - %m %n 